<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <com.example.basiccustomview.exercise.exercise7.view.keyframe.KeyFrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#2b2b2b" >

        <com.example.basiccustomview.exercise.exercise7.view.keyframe.KeyframeView
            android:id="@+id/key_frame_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </com.example.basiccustomview.exercise.exercise7.view.keyframe.KeyframeView>

        <TextView android:id="@+id/anim_tv"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_button_selector"
            android:gravity="center"
            android:text="执行动画"
            android:textSize="18sp"
            android:textStyle="bold" />

    </com.example.basiccustomview.exercise.exercise7.view.keyframe.KeyFrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>