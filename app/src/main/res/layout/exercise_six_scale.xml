<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <com.example.basiccustomview.exercise.exercise6.view.ScaleAnim
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#2b2b2b">

        <ImageView android:id="@+id/music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="36dp"
            android:src="@mipmap/music" />

        <TextView android:id="@+id/scale_x"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_button_selector"
            android:gravity="center"
            android:text="Scale_x"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView android:id="@+id/scale_y"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_button_selector"
            android:gravity="center"
            android:text="Scale_y"
            android:textSize="18sp"
            android:textStyle="bold" />

    </com.example.basiccustomview.exercise.exercise6.view.ScaleAnim>

</androidx.constraintlayout.widget.ConstraintLayout>