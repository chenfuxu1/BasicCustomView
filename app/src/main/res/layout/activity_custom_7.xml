<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customview.customview1.MainActivity">

    <com.example.basiccustomview.customview.customview7.CustomView7 android:id="@+id/custom_view_7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.basiccustomview.customview.customview7.CircleView
            android:id="@+id/circle_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#2b2b2b">

        </com.example.basiccustomview.customview.customview7.CircleView>

        <com.example.basiccustomview.customview.customview7.PointView
            android:id="@+id/point_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/circle_view"
            android:background="#222b2b2b"
            android:visibility="gone">

        </com.example.basiccustomview.customview.customview7.PointView>

        <ImageView
            android:id="@+id/music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circle_view"
            android:layout_marginStart="120dp"
            android:layout_marginTop="100dp"
            android:src="@mipmap/music"
            android:visibility="gone"
            android:contentDescription="TODO" />

        <com.example.basiccustomview.customview.customview7.SportsView
            android:id="@+id/sport_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/circle_view"
            android:background="#cc2b2b2b"
            >

        </com.example.basiccustomview.customview.customview7.SportsView>

        <TextView android:id="@+id/anim_tv"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_button_selector"
            android:gravity="center"
            android:text="执行动画"
            android:textSize="18sp"
            android:textStyle="bold" />

    </com.example.basiccustomview.customview.customview7.CustomView7>


</androidx.constraintlayout.widget.ConstraintLayout>