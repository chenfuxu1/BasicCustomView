<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customview.customview1.MainActivity">

    <com.example.basiccustomview.customview.customview6.CustomView6
        android:id="@+id/custom_view_6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        >

        <ImageView android:id="@+id/yi_hu"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="100dp"
            android:src="@mipmap/yihu"
            android:contentDescription="TODO" />

        <com.example.basiccustomview.customview.customview6.SportsView
            android:id="@+id/sport_view"
            android:layout_width="match_parent"
            android:layout_height="300dp" >

        </com.example.basiccustomview.customview.customview6.SportsView>


    </com.example.basiccustomview.customview.customview6.CustomView6>

    <TextView
        android:id="@+id/text_view"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="点击"
        android:gravity="center"
        android:textSize="50dp"
        android:textColor="#FF0000"
        android:background="#00FFFF"
        app:layout_constraintBottom_toBottomOf="@+id/custom_view_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <androidx.constraintlayout.widget.Guideline android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="120dp" />


</androidx.constraintlayout.widget.ConstraintLayout>