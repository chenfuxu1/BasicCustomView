<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <com.example.basiccustomview.exercise.exercise6.view.TranslationAnim
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2b2b2b"
        >

        <ImageView android:id="@+id/music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="36dp"
            android:src="@mipmap/music" />

        <TextView android:id="@+id/translation_x"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_button_selector"
            android:gravity="center"
            android:text="TranslationX"
            android:textSize="18sp"

            android:textStyle="bold" />

        <TextView android:id="@+id/translation_y"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/translation_x"
            android:background="@drawable/shape_button_selector"
            android:gravity="center"
            android:text="TranslationY"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView android:id="@+id/translation_z"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/translation_y"
            android:background="@drawable/shape_button_selector"
            android:gravity="center"
            android:text="TranslationZ"
            android:textSize="18sp"
            android:textStyle="bold" />

    </com.example.basiccustomview.exercise.exercise6.view.TranslationAnim>

</androidx.constraintlayout.widget.ConstraintLayout>